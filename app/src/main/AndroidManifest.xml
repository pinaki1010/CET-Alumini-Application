<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.asus.alumini">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".EventDetailsActivity"></activity>
        <activity
            android:name=".PostDetailsActivity"
            android:theme="@style/noActionBar" />
        <activity android:name=".EventsActivity" />
        <activity
            android:name=".SearchActivity"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".NoticeActivity"
            android:label="Notice"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" />
        <activity
            android:name=".CommentsActivity"
            android:label="Comments" />
        <activity
            android:name=".AddPostActivity"
            android:label="Add your post" />
        <activity
            android:name=".HomeActivity"
            android:label="CET Alumni"
            android:theme="@style/materialNoActionBar" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="Forgot your Password"
            android:theme="@style/noActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>