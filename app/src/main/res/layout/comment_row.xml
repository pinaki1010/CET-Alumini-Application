<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="@android:color/black"
                android:id="@+id/comments_dp"
                app:civ_border_width="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/11/19"
                android:id="@+id/comments_time"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/comments_dp"
                android:layout_toStartOf="@id/comments_time"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:id="@+id/comments_name"
                android:maxLines="1"
                android:layout_marginEnd="8dp"
                android:text="Your Name"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:id="@+id/comments_comment"
            android:layout_height="wrap_content"
            android:text="Your cool comment"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>