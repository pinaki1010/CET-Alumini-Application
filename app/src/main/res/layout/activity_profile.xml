<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ProfileActivity">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:elevation="20dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#F5FFFFFF"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:civ_border_width="1dp"
                android:id="@+id/profileDp"
                app:civ_border_color="@android:color/black"
                android:src="@drawable/ic_person_black_24dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/profileName"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:drawablePadding="12dp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/profileEmail"/>
            <TextView
                android:layout_width="wrap_content"
                android:drawablePadding="12dp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_local_phone_black_24dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:id="@+id/profilePhone"/>
            <TextView
                android:layout_width="wrap_content"
                android:drawablePadding="12dp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_camera_roll_black_24dp"
                android:layout_height="wrap_content"
                android:text="Roll"
                android:id="@+id/profileRoll"/>
            <TextView
                android:drawablePadding="12dp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_accessibility_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:id="@+id/profileAge"/>
            <TextView
                android:drawablePadding="12dp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_child_care_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:id="@+id/profileGender"/>
            <TextView
                android:drawablePadding="12dp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch"
                android:id="@+id/profileYear"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>